<!DOCTYPE html>
<html>
  <head>
    <title>Watch Details</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@1.0.0/css/bulma.min.css"
    />
    <style>
      .card{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 70%;
        margin: 20px auto 0 auto;
      }
      
      .popup-box {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.4);
      }
      .popup-content {
        background-color: #fefefe;
        margin: 15% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 50%;
      }


    .card-image {
      width: 50%;
      height: 40%;
      object-fit: cover;
    }
    .card-content {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
    }
    .content {
      padding: auto;
      font-size: 18px;
    }
    .subtitle-is-6 {
      font-size: 20px;
    }
    .card-footer{
      margin-bottom: 20px;
    }
    /* Định dạng cho form feedback */
#feedbackForm {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* Định dạng cho các nhãn và input radio */
.rate {
  display: flex;
  justify-content: center;
  margin-bottom: 20px;
}

.rate input[type="radio"] {
  display: none;
}

.rate label {
  font-size: 18px;
  color: #ddd;
  cursor: pointer;
  margin: 0 5px;
  transition: color 0.3s;
}

.rate input[type="radio"]:checked ~ label,
.rate label:hover,
.rate label:hover ~ label {
  color: #f39c12;
  font-weight: bold;
}

/* Định dạng cho textarea */
textarea#feedback {
  width: 80%;
  max-width: 600px;
  padding: 10px;
  font-size: 16px;
  border: 1px solid #ccc;
  border-radius: 5px;
  margin-bottom: 20px;
  resize: vertical;
}

  </style>
  </head>
  <body>
    <%- include('navbar') %>
    <div class="container">
    <div class="card" id="watchDetails"></div>
    <div id="commentSection" class="card">
        <div id="comments" style="display: none;"></div>
      </div>
    <div id="popup" class="popup-box">
      <div class="popup-content">
        <span onclick="closePopup()" style="float:right;cursor:pointer">&times;</span>
        <h2 class="title">Rate and Comment</h2>
        <form id="feedbackForm">
          <div class="rate" required>
            <input type="radio" id="star5" name="rate" value="5" />
            <label for="star5" title="text">5 ⭐ </label>
            <input type="radio" id="star4" name="rate" value="4" />
            <label for="star4" title="text">4 ⭐</label>
            <input type="radio" id="star3" name="rate" value="3" />
            <label for="star3" title="text">3 ⭐</label>
            <input type="radio" id="star2" name="rate" value="2" />
            <label for="star2" title="text">2 ⭐</label>
            <input type="radio" id="star1" name="rate" value="1" />
            <label for="star1" title="text">1 ⭐</label>
          </div>
          <textarea required id="feedback" name="feedback" rows="4" cols="50" placeholder="Enter your feedback here..."></textarea>
          <button class="button is-success" type="button" onclick="submitFeedback(watchId)">Submit</button>
        </form>
        </div>
      </div>
  </div>
  </body>
</html>
</html>
<script src="/js/detailsWatch.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  const watchId = "<%= watchId %>";
  fetchWatchDetails(watchId);
</script>
